<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MAUIDemo.ViewModels"
             x:Class="MAUIDemo.Views.ArticlePage"
             x:DataType="viewmodels:ArticleViewModel"
             Title="">
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="{Binding ImageURL}" HeightRequest="300" Aspect="AspectFill"/>
            <Label Text="{Binding Title}"
                   FontFamily="NotoSerifBold"
                   FontSize="20"
                   Margin="20"/>
            <Label Text="{Binding Body}" Margin="20,0,20,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
